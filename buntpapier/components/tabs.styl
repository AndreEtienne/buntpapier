	.{$prefix}-tab
		outline: none
	// tab header
	.{$prefix}-tab-header-item {
		font-family: $font-stack;
		position: relative;

		display: flex;
		height: 48px;
		padding: 0 12px;
		text-transform: uppercase;

		align-items: center;
		justify-content: center;

		cursor: pointer;
		min-width: 80px;

		&.type-icon-and-text {
			display: flex;
			flex-direction: column;
			height: 72px;

			.{$prefix}-tab-header-item-icon {
				margin-bottom: 4px;
				margin-bottom: 4px;
			}
		}

		&.disabled {
			opacity: 0.4;
			cursor: default;
		}
	}

	// .{$prefix}-tab-header-item-text {
	// 	@extends $truncate-text;
	// }

	.{$prefix}-tab-header-item-icon {
		width: 24px;
		height: 24px;

		.{$prefix}-icon {
			cursor: inherit;
		}
	}
	
	.{$prefix}-tabs-indicator
		position: absolute
		height: 2px
		bottom: 0
		left: 0
		right: 0
		background-color: $clr-red
		transform: scale(0)
		transform-origin: left center
		transition: transform
		// @apply(--paper-tabs-selection-bar);
	
		&.align-bottom
			top: 0
			bottom: auto
			
		&.expand
			transition-duration: 0.075s
			transition-timing-function: cubic-bezier(0.4, 0.0, 1, 1)

		&.contract
			transition-duration: 0.09s
			transition-timing-function: cubic-bezier(0.0, 0.0, 0.2, 1)
