tabs()
	.{$prefix}-tabs
		width 100%
		margin-bottom 24px

		&.fullwidth
			.ui-tab-header-item
				flex-grow: 1

		&.raised
			border: none
			box-shadow: 0 0 2px alpha(black, 0.12), 0 2px 2px alpha(black, 0.2)

			.{$prefix}-tabs-body
				border: none

	.{$prefix}-tabs-header
		position: relative
		width: 100%

		&.background-color-default
			background-color: $clr-grey-200

			.ui-tab-header-item
				body[modality="keyboard"] &:focus
					outline: 1px solid $clr-primary

		&.background-color-primary,
		&.background-color-accent,
		&.background-color-clear
			.ui-tab-header-item
				body[modality="keyboard"] &:focus
					outline: 1px solid $clr-white

				.ui-ripple-ink .ripple.held
					opacity: 0.7

	.{$prefix}-tabs-header-items
		position: relative
		display: flex
		list-style: none
		margin: 0
		padding: 0

		&.text-color-black
			color: alpha(black, 0.54)

			.ui-tab-header-item-icon
				color: alpha(black, 0.54)

		&.text-color-white
			color: alpha(white, 0.65)

			.{$prefix}-tab-header-item-icon
				color: alpha(white, 0.65)

		&.text-color-active-primary
			.{$prefix}-tab-header-item.active
				color: $clr-primary

				.{$prefix}-tab-header-item-icon
					color: $clr-primary

		&.text-color-active-accent
			.{$prefix}-tab-header-item.active
				color: $clr-accent

				.{$prefix}-tab-header-item-icon
					color: $clr-accent

		&.text-color-active-white
			.{$prefix}-tab-header-item.active
				color: white

				.{$prefix}-tab-header-item-icon
					color: white

